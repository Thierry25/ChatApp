<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/messageLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_text_background"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <TextView
            android:id="@+id/senderOfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingTop="5dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:text="@string/sender"
            android:textColor="@android:color/black"
            android:visibility="gone" />


        <LinearLayout
            android:layout_below="@id/senderOfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxWidth="250dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="@string/textview"
                android:textColor="@android:color/background_dark" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:foregroundGravity="bottom"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="3dp"
                    android:text="@string/time_created"
                    android:textColor="@android:color/background_dark"
                    android:textSize="9sp" />
                <!--android:layout_toEndOf="@id/message_text_layout"-->
                <!--android:layout_toRightOf="@id/message_text_layout"-->

                <TextView
                    android:id="@+id/amount_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_seen"
                    android:drawableLeft="@drawable/ic_seen"
                    android:drawablePadding="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:text="@string/_1"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>