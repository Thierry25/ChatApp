<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <RelativeLayout
        android:id="@+id/messageLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_text_background_for_me"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/senderOfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:text="@string/sender"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxWidth="250dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:text="@string/textview"
                android:textColor="@android:color/background_light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:foregroundGravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="3dp"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="3dp"
                    android:paddingRight="4dp"
                    android:text="@string/time_created"
                    android:textColor="@android:color/background_light"
                    android:textSize="9sp" />


                <TextView
                    android:id="@+id/amount_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    android:layout_marginRight="6dp"
                    android:paddingBottom="2dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:drawableLeft="@drawable/ic_seen"
                    android:drawableStart="@drawable/ic_seen"
                    android:drawablePadding="4dp"/>



            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>