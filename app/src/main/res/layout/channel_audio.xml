<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/message_text_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/audio_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/audio_seekbar"
            android:layout_marginLeft="-9dp"
            android:layout_marginBottom="17dp"
            android:layout_toRightOf="@id/audio_seekbar"
            android:gravity="center"
            android:paddingEnd="4dp"
            android:paddingRight="8dp"
            android:text="@string/_00_00"
            android:textColor="@android:color/black"
            android:textSize="9sp"
            android:visibility="visible"
            android:layout_marginStart="-9dp"
            android:layout_toEndOf="@id/audio_seekbar" />

        <TextView
            android:id="@+id/senderOfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="@string/sender"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:layout_marginStart="4dp" />

        <ImageButton
            android:id="@+id/play_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/senderOfMessage"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_play_copy" />

        <SeekBar
            android:id="@+id/audio_seekbar"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/senderOfMessage"
            android:layout_toRightOf="@id/play_audio"
            android:padding="14dp"
            android:layout_toEndOf="@id/play_audio" />

        <TextView

            android:id="@+id/amount_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/audio_seekbar"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/audio_time"
            android:drawableStart="@drawable/ic_listen"
            android:drawableLeft="@drawable/ic_listen"
            android:drawablePadding="4dp"
            android:text="@string/_1"
            android:textColor="@android:color/black"
            android:textSize="9sp"
            android:visibility="visible"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@id/audio_time" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

