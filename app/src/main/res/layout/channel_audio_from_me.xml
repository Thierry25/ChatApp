<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/message_text_background_for_me"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/play_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_play_copy" />

        <SeekBar
            android:id="@+id/audio_seekbar"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/play_audio"
            android:padding="14dp"
            android:paddingEnd="1dp"
            android:paddingRight="1dp" />

        <TextView
            android:id="@+id/audio_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/audio_seekbar"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="8dp"
            android:text="@string/_00_00"
            android:textColor="@android:color/white"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/amount_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@id/audio_time"
            android:drawableStart="@drawable/ic_listen"
            android:drawableLeft="@drawable/ic_listen"
            android:drawablePadding="4dp"
            android:text="@string/_1"
            android:textColor="@android:color/white"
            android:textSize="9sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/senderOfMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>

